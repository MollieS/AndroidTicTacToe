<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/board"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="tictactoe.MainActivity">

    <Button
        android:id="@+id/centre_button"
        style="@style/CellButton"/>

    <Button
        android:id="@+id/top_centre"
        style="@style/CellButton"
        android:layout_above="@+id/centre_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"/>

    <Button
        android:id="@+id/centre_bottom"
        style="@style/CellButton"
        android:layout_below="@+id/centre_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"/>

    <Button
        android:id="@+id/right_centre"
        style="@style/CellButton"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/centre_button"/>

    <Button
        android:id="@+id/left_centre"
        style="@style/CellButton"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/centre_button"/>

    <Button
        android:id="@+id/left_top_corner"
        style="@style/CellButton"
        android:layout_alignBottom="@+id/top_centre"
        android:layout_alignEnd="@+id/left_centre"/>

    <Button
        android:id="@+id/right_top_corner"
        style="@style/CellButton"
        android:layout_alignBottom="@+id/top_centre"
        android:layout_alignStart="@+id/right_centre"/>

    <Button
        android:id="@+id/left_bottom"
        style="@style/CellButton"
        android:layout_alignBottom="@+id/centre_bottom"
        android:layout_alignEnd="@+id/left_centre"/>

    <Button
        android:id="@+id/right_bottom"
        style="@style/CellButton"
        android:layout_alignStart="@+id/right_centre"
        android:layout_alignTop="@+id/centre_bottom"/>

</RelativeLayout>
