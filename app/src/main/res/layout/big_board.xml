<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:rowCount="4"
            android:useDefaultMargins="false"
            android:rowOrderPreserved="true"
    >

    <Button
        android:id="@+id/top_left"
        style="@style/SmallCellButton"
        android:layout_column="0"
        android:layout_row="2"/>

    <Button
        android:id="@+id/top_mid_left"
        style="@style/SmallCellButton"
        android:layout_column="1"
        android:layout_row="2"/>

    <Button
        android:id="@+id/top_mid_right"
        style="@style/SmallCellButton"
        android:layout_column="2"
        android:layout_row="2"/>

    <Button
        android:id="@+id/top_right"
        style="@style/SmallCellButton"
        android:layout_column="3"
        android:layout_row="2"/>

    <Button
        android:id="@+id/second_left"
        style="@style/SmallCellButton"
        android:layout_column="0"
        android:layout_row="1"/>

    <Button
        android:id="@+id/second_mid_left"
        style="@style/SmallCellButton"
        android:layout_column="1"
        android:layout_row="1"/>

    <Button
        android:id="@+id/second_mid_right"
        style="@style/SmallCellButton"
        android:layout_column="2"
        android:layout_row="1"/>

    <Button
        android:id="@+id/second_right"
        style="@style/SmallCellButton"
        android:layout_column="3"
        android:layout_row="1"/>

    <Button
        android:id="@+id/third_left"
        style="@style/SmallCellButton"
        android:layout_column="0"
        android:layout_row="0"/>

    <Button
        android:id="@+id/third_mid_left"
        style="@style/SmallCellButton"
        android:layout_column="1"
        android:layout_row="0"/>

    <Button
        android:id="@+id/third_mid_right"
        style="@style/SmallCellButton"
        android:layout_column="2"
        android:layout_row="0"/>

    <Button
        android:id="@+id/third_right"
        style="@style/SmallCellButton"
        android:layout_column="3"
        android:layout_row="0"/>

    <Button
        android:id="@+id/bottom_left"
        style="@style/SmallCellButton"
        android:layout_column="0"
        android:layout_row="3"/>

    <Button
        android:id="@+id/bottom_mid_left"
        style="@style/SmallCellButton"
        android:layout_column="1"
        android:layout_row="3"/>

    <Button
        android:id="@+id/bottom_mid_right"
        style="@style/SmallCellButton"
        android:layout_column="2"
        android:layout_row="3"/>

    <Button
        android:id="@+id/bottom_right"
        style="@style/SmallCellButton"
        android:layout_column="3"
        android:layout_row="3"/>


</GridLayout>